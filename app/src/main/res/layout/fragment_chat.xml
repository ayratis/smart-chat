<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/spacer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spacer_top"
        app:title="CHAT" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:paddingBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:clipToPadding="true"
        tools:listitem="@layout/item_dummy" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@id/spacer_bottom"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/spacer_bottom"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <FrameLayout
        android:id="@+id/spacer_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>