<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/spacer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spacer_top"
        app:title="@string/app_name" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar"
        android:background="@color/divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divider2"
        android:layout_below="@id/divider1"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingVertical="8dp"
        tools:listitem="@layout/item_chat_msg_outgoing" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/layout_input"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/spacer_bottom">

        <LinearLayout
            android:id="@+id/view_quoted_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#0d99cc00"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                tools:text="Quot: " />

            <TextView
                android:id="@+id/tv_quoted_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                tools:text="Привет! Как дела?" />

            <ImageButton
                android:id="@+id/btn_quoted_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="@string/cancel"
                android:gravity="center"
                android:src="@drawable/ic_baseline_close_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_editing_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view_quoted_message"
            android:background="#0d000000"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                tools:text="Edit: " />

            <TextView
                android:id="@+id/tv_editing_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:paddingVertical="8dp"
                tools:text="Привет! Как дела?" />

            <ImageButton
                android:id="@+id/btn_editing_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="@string/cancel"
                android:gravity="center"
                android:src="@drawable/ic_baseline_close_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_attach_photo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/view_editing_message"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <ImageButton
                android:id="@+id/btn_attach_photo_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="@string/cancel"
                android:gravity="center"
                android:src="@drawable/ic_baseline_close_24" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/view_attach_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_attach_photo"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_file"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_insert_drive_file_24" />

            <TextView
                android:id="@+id/tv_attach_file_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_file"
                android:ellipsize="end"
                android:lines="1" />

            <ImageButton
                android:id="@+id/btn_attach_file_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@id/iv_file"
                android:layout_toRightOf="@id/iv_file"
                android:background="?attr/actionBarItemBackground"
                android:contentDescription="@string/cancel"
                android:gravity="center"
                android:src="@drawable/ic_baseline_close_24" />

        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/view_attach_file"
            android:background="@color/divider" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/divider3"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@id/btn_attach_file"
            android:layout_toLeftOf="@id/btn_attach_file"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <ImageButton
            android:id="@+id/btn_attach_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/divider3"
            android:layout_marginVertical="8dp"
            android:layout_toStartOf="@id/btn_attach_photo"
            android:layout_toLeftOf="@id/btn_attach_photo"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_baseline_attach_file_24" />

        <ImageButton
            android:id="@+id/btn_attach_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/divider3"
            android:layout_marginVertical="8dp"
            android:layout_toStartOf="@id/btn_main_action"
            android:layout_toLeftOf="@id/btn_main_action"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <ImageButton
            android:id="@+id/btn_main_action"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/divider3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/send"
            android:src="@drawable/ic_baseline_send_24" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/spacer_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>