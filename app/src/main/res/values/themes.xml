<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SmartChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_heart</item>
        <item name="colorPrimaryVariant">@color/purple_heart</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_heart</item>
        <item name="colorSecondaryVariant">@color/purple_heart</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="AppBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/purple_heart</item>
    </style>

</resources>
